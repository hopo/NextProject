<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 의약품 매퍼 -->
<mapper namespace="kr.or.nextit.medicine.service.impl.MedicineMapper">



<!-- 약품 등록 폼  -->
<select id="medicineCreate" parameterType="kr.or.nextit.comm.model.MedicineVo"   
							resultType="kr.or.nextit.comm.model.MedicineVo">
	
		SELECT
			medCode,			
			medStoredate,	 
			medDisusedate,
			medAmt, 			
			medMemo		
		FROM
			TB_MEDICINE
	
</select>



<!-- 약품 리스트 조회   -->
<select id="medicineSelectList" parameterType="kr.or.nextit.comm.model.MedicineVo"
								resultType="kr.or.nextit.comm.model.MedicineVo">
		
		SELECT a.med_code
		     , b.med_codename
		     , b.med_unit 
		     , a.med_storedate
		     , a.med_disusedate
		     , a.med_amt
		     , a.med_memo 
		  FROM tb_medicine a 
		     , tb_med_codename  b
		 WHERE a.med_code = b.med_code   

		
</select>



